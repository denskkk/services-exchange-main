# Production env (default values for first run â€” change in production!)
# Django
SECRET_KEY=dev-insecure-secret-please-change
DEBUG=False
# Allow any host temporarily (replace with your domain,IP later)
ALLOWED_HOSTS=*
# Add your domain(s) later for CSRF; http is fine for initial tests
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# Database (Django uses DB_*)
DB_NAME=appdb
DB_USER=appuser
DB_PASSWORD=app_password
DB_HOST=db
DB_PORT=5432

# Postgres container bootstrap creds (must match DB_*)
POSTGRES_DB=appdb
POSTGRES_USER=appuser
POSTGRES_PASSWORD=app_password

# Redis inside compose network
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Optional
# SENTRY_DSN=
