# Production environment variables for Docker Compose
# Copy to .env.prod and fill in secure values

# Django
SECRET_KEY=change-me-to-a-long-random-string
DEBUG=False
# Comma-separated hostnames (no spaces)
ALLOWED_HOSTS=yourdomain.com
# Comma-separated full origins (http/https). For HTTPS add both http and https during the switch.
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,http://yourdomain.com

# Database (Django expects these DB_* names)
DB_NAME=services
DB_USER=services
DB_PASSWORD=strong-password
DB_HOST=db
DB_PORT=5432

# Same credentials for the Postgres image (it reads POSTGRES_* vars)
POSTGRES_DB=services
POSTGRES_USER=services
POSTGRES_PASSWORD=strong-password

# Redis (optional to override; defaults are fine inside Docker network)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Optional monitoring
# SENTRY_DSN=
